{
    "name": "formundzeichen/contao-cookie-consent-bundle",
    "type": "contao-bundle",
    "description": "Responsive cookie consent plugin for Contao. The plugin provides different privacy settings for the visitor. Google Analytics is only loaded when the visitor agrees to enable statistics. The plugin supports OnePages - no need to reload page after setting privacy settings. Installation instructions: https://github.com/ckarisch/ContaoCookieConsentBundle",
    "keywords": [
  		"contao",
  		"cookie",
      "cookieconsent",
  		"opt-in",
  		"cookiebar",
  		"cookie popup"
  	],
    "homepage": "https://www.formundzeichen.at/plugin/contao-cookie-popup.html",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Christof Karisch",
            "homepage": "https://www.formundzeichen.at"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "contao/core-bundle": "^4.8"
    },
    "conflict": {
        "contao/core": "*",
        "contao/manager-plugin": "<2.0 || >=3.0",
        "codefog/contao-cookiebar": "*"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "doctrine/doctrine-cache-bundle": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.12",
        "php-http/guzzle6-adapter": "^1.1",
        "php-http/message-factory": "^1.0.2",
        "phpunit/phpunit": "^5.7.26",
        "symfony/phpunit-bridge": "^3.2"
    },
    "extra": {
        "contao-manager-plugin": "Formundzeichen\\ContaoCookieConsentBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Formundzeichen\\ContaoCookieConsentBundle\\": "src/"
        },
        "classmap": [
					"src/Resources/contao/"
    		],
        "exclude-from-classmap": [
            "src/Resources/contao/cache/",
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Formundzeichen\\ContaoCookieConsentBundle\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/ckarisch/ContaoCookieConsentBundle/issues",
        "source": "https://github.com/ckarisch/ContaoCookieConsentBundle"
    }
}
